  <h2>Grocery Items</h2>
  <% if current_user %>
    <div class="well"><p>Add an item to your item by typing below:</p>
      <div class="span8">
        <%= form_for :item do |item| %>
          <%= item.label :name, :class => 'span8 input-large search-query' %>
          <%= item.text_field :name, :class => 'span8 input-large'  %>
          <%= item.label :price, :class => 'span8 input-large search-query' %>
          <%= item.text_field :price, :class => 'span8 input-large'  %><br />
          <%= item.label :category %>
          <%= item.select(:category, @category)%>
          <br />
          <%= item.submit "Add", :class => 'btn btn-primary btn-sm' %>
        <% end %><br />
       
      </div>
    </div>
  </div><!-- Ends the layout's main div to create whitespace below -->
  <div class="well">
    <% @current = current_user %>
   
    
    
    
    
    
    
    <div class="container">
    <h3>Click the search icon <small>(<i class="glyphicon glyphicon-search"></i>)</small> to search</h3>
    	<div class="row">
			<div class="col-md-10">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h3 class="panel-title">Items</h3>
						<div class="pull-right">
							<span class="clickable filter" data-toggle="tooltip" title="Toggle table filter" data-container="body">
								<i class="glyphicon glyphicon-search"></i>
							</span>
						</div>
					</div>
					<div class="panel-body">
						<input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#item-table" placeholder="Filter Items" />
					</div>
					<table class="table table-hover" id="item-table">
						<thead>
							<tr>
								<th><%= sortable "Name" %></th>  
                <th><%= sortable "Price" %></th> 
                <th><%= sortable "Category" %></th>
                <th>Remove</th>
							</tr>
						</thead>
						<tbody>
							 <% for item in @items %>  
                  <tr>  
                    <td><%= item.name %></td>  
                    <td><%= number_to_currency(item.price, :unit => "$") %></td>
                    <td><%= item.category %></td> 
                    <td><%= link_to '[x]', item, :method => :delete %></td>
                  </tr>  
              <% end %>
						</tbody>
					</table>
				</div>
			</div>
	</div>
  <% else %>
    <h3> Please sign in to create a list </h3>
  <% end %>
<!-- No ending div because its closed in the layout -->