  <h2>Grocery List</h2>
  <div class="well"><p>Add an item to your list by typing below:</p>
    <%= form_for :list do |l| %>
    <%= l.label :name, :class => 'span12 input-large search-query' %>
      <%= l.text_field :name, :class => 'span21 input-large'  %><br />
      <%= l.label :category %>
      <%= l.select(:category, @category)%>
      <br />
      <%= l.submit "Add", :class => 'btn btn-primary' %>  
  </div>
  
  <% end %>
