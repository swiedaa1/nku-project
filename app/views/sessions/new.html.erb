<div class="panel panel-primary">
  <div class="panel-heading">
    <div class="panel-title"><h2>Log in</h2></div>
  </div>
  <div class="panel-body">
    <%= form_tag('/login') do %> 
      <p>
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      </p> 
      <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </p>
        
      <%= submit_tag "Log in" %> 
      <% end %>
    </div>
</div>
<%= link_to 'Back', root_path %>